# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to version control!

# Django Settings
DJANGO_SECRET_KEY=your-super-secret-key-generate-new-one
DJANGO_SETTINGS_MODULE=config.settings_production

# Domain Configuration
DOMAIN_NAME=yourdomain.com
EC2_PUBLIC_IP=your-ec2-public-ip

# RDS PostgreSQL Database
RDS_DB_NAME=textile_inventory
RDS_USERNAME=admin
RDS_PASSWORD=your-secure-database-password
RDS_HOSTNAME=your-rds-endpoint.amazonaws.com
RDS_PORT=5432

# AWS S3 Configuration (Optional - only if using S3 for media files)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=ap-south-1

# Email Configuration (Optional - for password reset, notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Superuser Credentials (for initial setup)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=your-admin-password
